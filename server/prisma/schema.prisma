generator client {
  provider      = "prisma-client-js"
  output        = "client"
  binaryTargets = ["native", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Reports {
  id          Int      @id @default(autoincrement())
  imageId     Int
  userId      Int
  title       String   @db.VarChar(100)
  description String   @db.Text
  type        String   @db.VarChar(50)
  time        DateTime @db.DateTime(0)
  latitude    Decimal  @db.Decimal(9, 6)
  longitude   Decimal  @db.Decimal(9, 6)
  User        Users    @relation(fields: [userId], references: [id], onUpdate: Restrict, map: "Reports_User_id_fk")
  images      Images   @relation(fields: [imageId], references: [id], onUpdate: Restrict, map: "Reports_images_id_fk")

  @@index([userId], map: "Reports_User_id_fk")
  @@index([imageId], map: "Reports_images_id_fk")
}

model Images {
  id      Int       @id @default(autoincrement())
  key     String    @db.VarChar(255)
  type    String    @db.VarChar(20)
  Reports Reports[]
  Users   Users[]
}

model Users {
  id       Int       @id @default(autoincrement())
  username String    @unique(map: "User_pk") @db.VarChar(100)
  name     String    @db.VarChar(255)
  imageId  Int
  password String    @db.Text
  Reports  Reports[]
  Images   Images    @relation(fields: [imageId], references: [id], onUpdate: Restrict, map: "Users_Images_id_fk")

  @@index([imageId], map: "Users_Images_id_fk")
}
